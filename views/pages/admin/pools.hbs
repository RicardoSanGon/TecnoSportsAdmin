<!-- Gestión de Quinelas - Diseño Moderno con Colores Verdes -->
<div class="min-h-screen bg-gradient-to-br from-primary-50 via-primary-100 to-primary-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">

    <!-- Header Section -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-4xl font-bold text-gray-900 mb-2">
            <i class="fas fa-trophy mr-3 text-primary-600"></i>
            Gestión de <span class="bg-gradient-to-r from-primary-400 to-primary-600 bg-clip-text text-transparent">Quinelas</span>
          </h1>
          <p class="text-lg text-gray-600">Administrar quinelas y ver clasificaciones</p>
        </div>
      </div>
    </div>

  <!-- Tabla de quinelas -->
  <div class="bg-white rounded-lg shadow-md">
    <div class="p-6 border-b border-gray-200">
      <div class="flex justify-between items-center">
        <h2 class="text-xl font-semibold text-gray-800">Lista de Quinelas</h2>
      </div>
    </div>

    <div class="p-6 overflow-x-auto">
      <table id="poolsTable" class="w-full text-sm text-left">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50">
          <tr>
            <th class="px-6 py-3">ID</th>
            <th class="px-6 py-3">Nombre</th>
            <th class="px-6 py-3">Creador</th>
            <th class="px-6 py-3">Participantes</th>
            <th class="px-6 py-3">Estado</th>
            <th class="px-6 py-3">Cerrada</th>
            <th class="px-6 py-3">Fecha Inicio</th>
            <th class="px-6 py-3">Acciones</th>
          </tr>
        </thead>
        <tbody id="poolsTableBody">
          {{#each pools}}
            <tr>
              <td class="px-6 py-4">{{this.id}}</td>
              <td class="px-6 py-4 font-medium text-gray-900">{{this.name}}</td>
              <td class="px-6 py-4">{{this.creatorId}}</td>
              <td class="px-6 py-4">{{this.maxParticipants}}</td>
              <td class="px-6 py-4">
                <span class="px-2 py-1 text-xs rounded-full {{#if this.isActive}}bg-green-100 text-green-800{{else}}bg-red-100 text-red-800{{/if}}">
                  {{#if this.isActive}}Activa{{else}}Inactiva{{/if}}
                </span>
              </td>
              <td class="px-6 py-4">
                <span class="px-2 py-1 text-xs rounded-full {{#if this.isClose}}bg-red-100 text-red-800{{else}}bg-green-100 text-green-800{{/if}}">
                  {{#if this.isClose}}Cerrada{{else}}Abierta{{/if}}
                </span>
              </td>
              <td class="px-6 py-4">{{this.startDate}}</td>
              <td class="px-6 py-4">
                <div class="flex gap-2">
                  <button onclick="viewRanking({{this.id}})" class="text-primary-600 hover:text-primary-800" title="Ver Ranking">
                    <span class="material-icons">leaderboard</span>
                  </button>
                  <button onclick="editPool({{this.id}})" class="text-primary-600 hover:text-primary-800">
                    <span class="material-icons">edit</span>
                  </button>
                  <button onclick="togglePoolStatus({{this.id}})" class="text-yellow-600 hover:text-yellow-800">
                    <span class="material-icons">{{#if this.isActive}}block{{else}}check_circle{{/if}}</span>
                  </button>
                  <button onclick="deletePool({{this.id}})" class="text-red-600 hover:text-red-800">
                    <span class="material-icons">delete</span>
                  </button>
                </div>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>

